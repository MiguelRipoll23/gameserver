{
  "imports": {
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^1.2.2",
    "@needle-di/core": "jsr:@needle-di/core@^1.1.0",
    "@scalar/hono-api-reference": "npm:@scalar/hono-api-reference@^0.9.40",
    "@simplewebauthn/server": "jsr:@simplewebauthn/server@^13.2.2",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@types/pg": "npm:@types/pg@^8.16.0",
    "@wok/djwt": "jsr:@wok/djwt@^3.0.2",
    "drizzle-kit": "npm:drizzle-kit@^0.31.9",
    "drizzle-orm": "npm:drizzle-orm@^0.45.1",
    "pg": "npm:pg@^8.18.0",
    "hono": "npm:hono@^4.11.9",
    "zod": "npm:zod@^4.3.6"
  },
  "permissions": {
    "default": {
      "env": true,
      "read": true,
      "net": true
    },
    "development": {
      "env": true,
      "read": true,
      "net": true
    },
    "database": {
      "env": true,
      "read": true,
      "write": true,
      "net": true,
      "run": true,
      "sys": true
    }
  },
  "tasks": {
    "dev": "deno run --permission-set=development --unstable-temporal --unstable-kv --unstable-broadcast-channel --env --watch src/main.ts",
    "debug": "deno run --inspect-wait --permission-set=development --unstable-temporal --unstable-kv --unstable-broadcast-channel --env --watch src/main.ts",
    "check": "deno check src/main.ts",
    "studio": "deno run --permission-set=database --node-modules-dir npm:drizzle-kit studio",
    "generate": "deno run --permission-set=database --node-modules-dir npm:drizzle-kit generate",
    "migrate": "deno run --permission-set=database --node-modules-dir npm:drizzle-kit migrate"
  },
  "compilerOptions": {
    "experimentalDecorators": true
  },
  "deploy": {
    "predeploy": "deno task migrate",
    "runtime": {
      "entrypoint": "src/main.ts",
      "args": ["--unstable-kv --unstable-broadcast-channel"]
    }
  }
}
